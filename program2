//checking the string is palindrome//
class main {            
    public static void main(String[] args) {
        String a="madam";
        System.out.println(isPalindrome(a));
             }  
static boolean isPalindrome(String str) {
    String rev="";
    for (int i = 0; i < str.length(); i++) {
    rev = str.charAt(i) + rev;
    }
        if(str.equals(rev)){
            return true;
        }
        return false;
}
}
